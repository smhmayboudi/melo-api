{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "name": "attach:debug",
      "port": 9229,
      "protocol": "inspector",
      "remoteRoot": "/app",
      "request": "attach",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "smartStep": true,
      "sourceMaps": true,
      "trace": true,
      "type": "node"
    },
    {
      "name": "start:debug",
      "port": 9229,
      "protocol": "inspector",
      "request": "launch",
      "runtimeArgs": ["run-script", "start:debug"],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "smartStep": true,
      "sourceMaps": true,
      "trace": true,
      "type": "node"
    },
    {
      "name": "test:debug",
      "port": 9229,
      "protocol": "inspector",
      "request": "launch",
      "runtimeArgs": ["run-script", "test:debug"],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "smartStep": true,
      "sourceMaps": true,
      "trace": true,
      "type": "node"
    }
  ]
}
