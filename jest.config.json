{
  "roots": [ "<rootDir>/src", "<rootDir>/test" ],
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/src/apm",
    "<rootDir>/src/prom",
    "<rootDir>/src/sentry"
  ],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(t|j)s$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  }
}
